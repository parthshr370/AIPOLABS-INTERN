{
  "manifest_version": 3,
  "name": "ContextDB",
  "description": "Extract and store webpage content using advanced content processing",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://localhost:*/*",
    "https://aci-contextualdb.onrender.com/*"
  ],
  "action": {
    "default_title": "Save page to ContextDB",
    "default_icon": {
      "128": "icons/aci-logo.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icons/aci-logo.png"
  },
  "side_panel": {
    "default_path": "search.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}